[alias]
	co = checkout
	ba = branch -a
	gca = commit -v -a
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	st = status -sb
	pom = push origin master
	l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(blue)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset'
    ll = !git l --all

