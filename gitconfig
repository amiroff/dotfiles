[core]
	excludesfile = ~/.dotfiles/gitignore_global
	editor = subl -w
	autocrlf = false
	quotepath = false

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
	
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[alias]
	co = checkout
	gb = git branch
	gba = git branch -a
	gc = git commit -v
	gca = git commit -v -a
	gd = git diff | subl
	gl = git pull
	gp = git push
	gst = git status
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	st = status -sb

[diff]
	external = ~/.dotfiles/meld_diff.py
